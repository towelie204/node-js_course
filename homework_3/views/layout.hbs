      <label for="text">Введите текст на английском языке:</label>
      <textarea name="text" id="text" cols="30" rows="2"></textarea>
      <button type="submit">Перевести</button>
    </form>
    <h2>
      {{translated}}
    </h2>
  </div>
</body>

</html>